<div class="seeMore">
    {{#with details}}
    <article >
        <img src="{{this.image}}" class="postersDtls" >
    </article>

    <article class="movieDtls">
        <h2>{{this.title}}</h2>
        <h3>Directors: {{this.director}}</h3>

        <h4>Stars:</h4>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <p>{{this.description}}</p>
        
      
        <p>{{this.showtimes}}</p>
    

    </article>  
    {{/with}}
</div>